                   authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="SYSTEM_AUTHZ_1" userGroupId="ADMIN" artifactGroupId="SYSTEM_APP"
            authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>
